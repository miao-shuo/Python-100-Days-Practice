def add(x, y):                                           # 定义加法运算
    return x + y

def sub(x, y):                                           # 定义减法运算
    return x - y

def mul(x, y):                                           # 定义乘法运算
    return x * y

def div(x, y):                                           # 定义除法运算
    return x / y

def calc(*args, init_value, op, **kwargs):               # init_value 运算初始值，op 二元运算函数
    result = init_value
    for arg in args:
        if type(arg) in (int, float):
            result = op(result, arg)
    for value in kwargs.values():
        if type(value) in (int, float):
            result = op(result, value)
    return result
